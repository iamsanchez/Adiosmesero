<%= form_for @product, :html => {:multipart => true} do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    


  

  <div class="field">
    <%= f.label :Nombre %><br>
    <%= f.text_field :Name %>
  </div>
  <div class="field">
    <%= f.label :Descripción %><br>
    <%= f.text_area :Description %>
  </div>


  <div class="field">
    <%= f.label :Imagen %><br>
    <%= f.file_field :Image %>
  </div>

   <p>
    <%= f.label :remote_image_url, "or image URL" %><br />
    <%= f.text_field :remote_Image_url %>
  </p>

  <div class="field">
    <%= f.label :Impuesto %><br>
    <p>&nbsp;&nbsp;&nbsp;&nbsp; <%= radio_button("post", "Product", "15") %> 15%   </p>
    <p>&nbsp;&nbsp;&nbsp;&nbsp; Otro </p>
    <p>&nbsp;&nbsp;&nbsp;&nbsp; <%= radio_button("post", "Product", "otro") %> <%= f.text_field :Tax %> %  </p>
    
  </div>
  <div class="field">
    <%= f.label :Precio %><br>
    <%= f.text_field :Price %>
  </div>
  <div class="field">
    <%= f.label :Categoría %><br>
    <% options = options_from_collection_for_select(@categories, 'id', 'Name') %>
    <%= f.select :Category_id,  options %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>

